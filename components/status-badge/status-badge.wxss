/* components/status-badge/status-badge.wxss */
.status-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 尺寸样式 */
.status-badge.small {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 15rpx;
}

.status-badge.medium {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.status-badge.large {
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  border-radius: 25rpx;
}

/* 活动状态样式 */
.status-badge.registering {
  background-color: #e8f5e8;
  color: #1AAD19;
}

.status-badge.finished {
  background-color: #f5f5f5;
  color: #666;
}

/* 报名状态样式 */
.status-badge.signed-up {
  background-color: #e3f2fd;
  color: #1976d2;
}

.status-badge.leave-requested {
  background-color: #fff3e0;
  color: #f57c00;
}

.status-badge.present {
  background-color: #e8f5e8;
  color: #1AAD19;
}

.status-badge.absent {
  background-color: #ffebee;
  color: #d32f2f;
}

.status-badge.unknown {
  background-color: #f5f5f5;
  color: #999;
}

.badge-text {
  line-height: 1;
}
