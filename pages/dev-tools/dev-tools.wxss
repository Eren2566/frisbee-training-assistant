/* pages/dev-tools/dev-tools.wxss */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 当前用户卡片 */
.current-user {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-detail {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.user-role {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.user-role.admin {
  background-color: #ff6b35;
  color: #fff;
}

.user-role.member {
  background-color: #4CAF50;
  color: #fff;
}

.no-user {
  text-align: center;
  padding: 40rpx 0;
}

.no-user-text {
  font-size: 28rpx;
  color: #999;
}

.user-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

/* 测试用户列表 */
.test-users-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.user-item:active {
  background-color: #e8f5e8;
  border-color: #4CAF50;
}

.user-basic-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.disc-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.gender-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #fff;
}

.gender-badge.male {
  background-color: #4A90E2;
}

.gender-badge.female {
  background-color: #E91E63;
}

.real-name {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.role-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.role-badge.admin {
  background-color: #ff6b35;
  color: #fff;
}

.role-badge.member {
  background-color: #4CAF50;
  color: #fff;
}

.switch-indicator {
  display: flex;
  align-items: center;
}

.current-indicator {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

.switch-text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-users {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
  color: #ccc;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 使用说明 */
.usage-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.usage-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 按钮样式 */
.btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #4CAF50;
  color: #fff;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
