   ========================================== */
.header {
  text-align: center;
  padding: var(--spacing-2xl) var(--spacing-lg) var(--spacing-xl);
  background: var(--gradient-sunset);
  color: white;
  margin-bottom: var(--spacing-lg);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 2px, transparent 2px);
  background-size: 60rpx 60rpx;
  animation: float 20s infinite linear;
}

.header::after {
  content: 'ü•è';
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 40rpx;
  opacity: 0.3;
  animation: spin 10s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes float {
  0% { transform: translateX(0) translateY(0); }
  100% { transform: translateX(-50px) translateY(-50px); }
}

.welcome-text {
  position: relative;
  z-index: 1;
}

.welcome-text .title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.welcome-text .subtitle {
  display: block;
  font-size: 30rpx;
  opacity: 0.95;
  font-weight: 400;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: var(--spacing-md);
}

.brand-tagline {
  margin-top: var(--spacing-md);
  padding: var(--spacing-sm) var(--spacing-md);
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--radius-xl);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.tagline-text {
  font-size: 24rpx;
  font-weight: 500;
  opacity: 0.9;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* ==========================================
   Áî®Êà∑‰ø°ÊÅØÊ†∑Âºè
   ========================================== */
.user-info {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) 0;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-full);
  margin-right: var(--spacing-lg);
  border: 4rpx solid var(--primary-light);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
}

.avatar:hover {
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-sm);
}

.role {
  display: inline-flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: 600;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-xl);
  position: relative;
  overflow: hidden;
}

.role[data-role="admin"] {
  background: linear-gradient(135deg, var(--warning-color) 0%, var(--warning-light) 100%);
  color: white;
  box-shadow: var(--shadow-sm);
}

.role[data-role="member"] {
  background: linear-gradient(135deg, var(--success-color) 0%, var(--success-light) 100%);
  color: white;
  box-shadow: var(--shadow-sm);
}

.role::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.role:hover::before {
  left: 100%;
}

/* ==========================================
   ÁôªÂΩïÊèêÁ§∫Ê†∑Âºè
   ========================================== */
.login-prompt {
  text-align: center;
  padding: var(--spacing-xl) 0;
}

.prompt-text {
  display: block;
  font-size: 34rpx;
  color: var(--gray-600);
  margin-bottom: var(--spacing-lg);
  font-weight: 500;
}

/* ==========================================
   ÂäüËÉΩÂØºËà™Ê†∑Âºè
   ========================================== */
.function-nav {
  margin: var(--spacing-lg) 0;
}

.nav-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border: 1rpx solid var(--gray-200);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl) var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--gradient-primary);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.nav-item:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.nav-item:hover::before {
  transform: scaleX(1);
}

.nav-icon {
  margin-right: var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content {
  flex: 1;
}

.nav-text {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-xs);
}

.nav-desc {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  font-weight: 400;
}

/* ==========================================
   Âø´ÈÄüÊìç‰ΩúÊ†∑Âºè
   ========================================== */
.quick-actions {
  margin-top: var(--spacing-xl);
}

.section-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-md);
  position: relative;
  padding-left: var(--spacing-md);
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--gradient-primary);
  border-radius: var(--radius-sm);
}

.action-buttons {
  display: flex;
  gap: var(--spacing-md);
}

.action-buttons button {
  flex: 1;
}

/* ==========================================
   ËÆ≠ÁªÉÂä®ÊÄÅ‰∏≠ÂøÉÊ†∑Âºè
   ========================================== */
.training-center {
  margin-top: var(--spacing-xl);
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-2xl);
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--gray-200);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: var(--spacing-md);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--gray-600);
}

/* ËÆ≠ÁªÉÂç°Áâá */
.training-card {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-lg);
  border: 1rpx solid var(--gray-200);
  position: relative;
  overflow: hidden;
  animation: slideInUp 0.6s ease-out;
  transition: all 0.3s ease;
}

.training-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.training-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: var(--gradient-primary);
}

.training-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-md);
  border-bottom: 2rpx solid var(--gray-100);
}

.training-icon {
  font-size: 48rpx;
  margin-right: var(--spacing-md);
}

.training-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-800);
}

/* ËÆ≠ÁªÉ‰ø°ÊÅØ */
.training-info {
  margin-bottom: var(--spacing-lg);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-sm) var(--spacing-md);
  background: rgba(255, 255, 255, 0.6);
  border-radius: var(--radius-lg);
  transition: all 0.3s ease;
  animation: fadeInLeft 0.6s ease-out;
}

.info-item:nth-child(1) { animation-delay: 0.1s; }
.info-item:nth-child(2) { animation-delay: 0.2s; }
.info-item:nth-child(3) { animation-delay: 0.3s; }
.info-item:nth-child(4) { animation-delay: 0.4s; }

.info-item:last-child {
  margin-bottom: 0;
}

.info-item:hover {
  background: rgba(255, 255, 255, 0.9);
  transform: translateX(4rpx);
}

@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.info-icon {
  font-size: 32rpx;
  width: 60rpx;
  text-align: center;
  margin-right: var(--spacing-md);
}

.info-text {
  font-size: 30rpx;
  color: var(--gray-700);
  flex: 1;
  font-weight: 500;
}

/* ÂÄíËÆ°Êó∂Âå∫Âüü */
.countdown-section {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b35 0%, #f57c00 100%);
  color: white;
  padding: var(--spacing-md);
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  animation: pulse 2s infinite;
  position: relative;
  overflow: hidden;
}

.countdown-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 60%);
  animation: rotate 10s linear infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.countdown-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-sm);
}

.countdown-text {
  font-size: 32rpx;
  font-weight: 700;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Êìç‰ΩúÊåâÈíÆ */
.action-buttons {
  display: flex;
  gap: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.action-btn {
  flex: 1;
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.status-text {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.leave-status {
  font-size: 30rpx;
  color: var(--warning-color);
  font-weight: 600;
  padding: var(--spacing-md);
  background: rgba(255, 152, 0, 0.1);
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--warning-color);
}

/* Êó†ËÆ≠ÁªÉÂç°Áâá */
.no-training-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: var(--spacing-2xl);
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  border: 2rpx dashed var(--gray-300);
}

.no-training-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.no-training-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-700);
  margin-bottom: var(--spacing-md);
}

.no-training-desc {
  font-size: 28rpx;
  color: var(--gray-600);
  margin-bottom: var(--spacing-xl);
  line-height: 1.5;
}

/* ==========================================
   ÂìçÂ∫îÂºèËÆæËÆ°ÂíåÁßªÂä®Á´Ø‰ºòÂåñ
   ========================================== */

/* Â∞èÂ±èÂπï‰ºòÂåñ */
@media (max-width: 750rpx) {
  .training-card {
    padding: var(--spacing-lg);
  }

  .training-icon {
    font-size: 40rpx;
  }

  .training-title {
    font-size: 32rpx;
  }

  .info-text {
    font-size: 28rpx;
  }

  .countdown-text {
    font-size: 28rpx;
  }

  .action-btn {
    font-size: 28rpx;
    padding: var(--spacing-sm) var(--spacing-md);
  }
}

/* Ëß¶Êë∏‰ºòÂåñ */
.action-btn {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}

.action-btn:active {
  transform: scale(0.95);
  transition: transform 0.1s ease;
}

/* Êó†ÈöúÁ¢ç‰ºòÂåñ */
.training-card {
  outline: none;
}

.training-card:focus {
  box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.3);
}

/* ÊÄßËÉΩ‰ºòÂåñ */
.training-center {
  will-change: transform;
  transform: translateZ(0);
}

.countdown-section {
  will-change: transform;
  transform: translateZ(0);
}
