<!--pages/login/login.wxml-->
<view class="page">
  <!-- 登录头部 -->
  <view class="login-header">
    <view class="logo">🥏</view>
    <text class="app-name">飞盘队训练助手</text>
    <text class="app-desc">专业的飞盘队训练管理工具</text>
  </view>

  <!-- 登录卡片 -->
  <view class="card login-card">
    <view class="login-title">
      <text>欢迎使用</text>
    </view>
    
    <view class="login-desc">
      <text>请授权登录以使用完整功能</text>
    </view>

    <!-- 登录按钮 -->
    <view class="login-buttons">
      <button 
        class="btn-primary login-btn" 
        bindtap="getUserProfile"
        disabled="{{isLoading}}"
      >
        {{isLoading ? '登录中...' : '微信授权登录'}}
      </button>
      
      <button 
        class="btn-secondary quick-login-btn" 
        bindtap="quickLogin"
        disabled="{{isLoading}}"
      >
        快速登录
      </button>
    </view>

    <!-- 功能说明 -->
    <view class="feature-list">
      <view class="feature-item">
        <text class="feature-icon">✅</text>
        <text class="feature-text">查看训练安排</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">📝</text>
        <text class="feature-text">在线报名请假</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">📊</text>
        <text class="feature-text">出勤统计管理</text>
      </view>
    </view>
  </view>

  <!-- 底部说明 -->
  <view class="login-footer">
    <text class="footer-text">登录即表示同意相关服务条款</text>
  </view>
</view>
