/* pages/admin/create-event/create-event.wxss */

/* ==========================================
   创建训练页面现代化样式
   ========================================== */
.page-header {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  background: var(--gradient-sunset);
  color: white;
  margin-bottom: var(--spacing-lg);
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  background-size: 30rpx 30rpx;
  animation: float 20s linear infinite;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.95;
  position: relative;
  z-index: 1;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.4;
}

.form-section {
  margin-bottom: var(--spacing-lg);
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border: 1rpx solid var(--gray-200);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md) var(--spacing-lg) var(--spacing-xs);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  position: relative;
}

.form-section:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2rpx);
}

.form-item {
  position: relative;
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-sm);
  position: relative;
  padding-left: var(--spacing-sm);
  line-height: 1.3;
}

.form-label::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 5rpx;
  height: 28rpx;
  background: var(--gradient-primary);
  border-radius: var(--radius-sm);
}

/* ==========================================
   表单输入样式
   ========================================== */
.form-input {
  width: 100%;
  padding: var(--spacing-lg) var(--spacing-md);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  transition: all 0.3s ease;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  line-height: 1.4;
}

.form-input:focus {
  border-color: var(--primary-color);
  background-color: white;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.1), inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  outline: none;
}

.form-textarea {
  width: 100%;
  padding: var(--spacing-lg) var(--spacing-md);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  min-height: 200rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  transition: all 0.3s ease;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  resize: none;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: var(--primary-color);
  background-color: white;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.1), inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  outline: none;
}

.input-hint {
  position: absolute;
  top: var(--spacing-md);
  right: var(--spacing-lg);
  font-size: 22rpx;
  color: var(--gray-500);
  background-color: rgba(255, 255, 255, 0.9);
  padding: 4rpx 8rpx;
  border-radius: var(--radius-sm);
  z-index: 1;
}

/* ==========================================
   时间选择器样式
   ========================================== */

/* 选中的时间显示 */
.selected-datetime {
  margin-bottom: var(--spacing-md);
}

.datetime-display {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg) var(--spacing-md);
  background: linear-gradient(135deg, #ff6b35 0%, #f57c00 100%);
  color: white;
  border-radius: var(--radius-lg);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  animation: slideInDown 0.3s ease-out;
}

.datetime-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-md);
}

.datetime-text {
  font-size: 32rpx;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.datetime-picker {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-md);
  width: 100%;
}

.picker-item {
  width: 100%;
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg) var(--spacing-md);
  gap: var(--spacing-sm);
}

/* 日期选择器特殊样式 */
.date-picker {
  border-left: 4rpx solid #4CAF50;
}

.date-picker .picker-content {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.05) 0%, rgba(76, 175, 80, 0.02) 100%);
}

/* 时间选择器特殊样式 */
.time-picker {
  border-left: 4rpx solid #FF9800;
}

.time-picker .picker-content {
  background: linear-gradient(135deg, rgba(255, 152, 0, 0.05) 0%, rgba(255, 152, 0, 0.02) 100%);
}

.picker-item:hover {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-md);
  transform: translateY(-2rpx);
}

.picker-icon {
  font-size: 28rpx;
  opacity: 0.8;
}

.picker-text {
  font-size: 28rpx;
  color: var(--gray-800);
  font-weight: 500;
  line-height: 1.3;
}

/* ==========================================
   操作按钮样式
   ========================================== */
.form-actions {
  display: flex;
  gap: var(--spacing-md);
  margin: var(--spacing-xl) var(--spacing-md) var(--spacing-lg);
}

.reset-btn, .submit-btn {
  flex: 1;
  padding: var(--spacing-lg) var(--spacing-xl);
  font-size: 30rpx;
  font-weight: 600;
  border-radius: var(--radius-lg);
  transition: all 0.3s ease;
  box-shadow: var(--shadow-md);
}

.reset-btn:hover, .submit-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-lg);
}

.reset-btn:active, .submit-btn:active {
  transform: translateY(0);
  box-shadow: var(--shadow-sm);
}

/* ==========================================
   提示卡片样式
   ========================================== */
.tips-card {
  margin: var(--spacing-xl) var(--spacing-md) var(--spacing-md);
  padding: var(--spacing-lg);
  background: linear-gradient(145deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: var(--radius-lg);
  border-left: 6rpx solid var(--primary-color);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
}

.tips-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(255, 107, 53, 0.1) 0%, transparent 70%);
}

.tips-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-md);
  position: relative;
  z-index: 1;
  line-height: 1.3;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.tip-item {
  font-size: 26rpx;
  color: var(--gray-700);
  line-height: 1.6;
  position: relative;
  padding-left: var(--spacing-md);
}

.tip-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: var(--primary-color);
  font-weight: bold;
  font-size: 28rpx;
}

/* ==========================================
   移动端优化和响应式设计
   ========================================== */

/* 小屏幕优化 */
@media (max-width: 750rpx) {
  .page-header {
    padding: var(--spacing-xl) var(--spacing-md) var(--spacing-lg);
  }

  .page-title {
    font-size: 42rpx;
  }

  .page-desc {
    font-size: 28rpx;
  }

  .form-section {
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .form-label {
    font-size: 30rpx;
    margin-bottom: var(--spacing-md);
  }

  .form-input, .form-textarea {
    padding: var(--spacing-lg) var(--spacing-md);
    font-size: 28rpx;
  }

  .datetime-picker {
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .picker-item {
    padding: var(--spacing-lg) var(--spacing-md);
    min-height: 80rpx;
  }

  .form-actions {
    margin: var(--spacing-xl) var(--spacing-md);
    gap: var(--spacing-md);
  }

  .reset-btn, .submit-btn {
    font-size: 30rpx;
    padding: var(--spacing-lg) var(--spacing-xl);
    min-height: 88rpx;
  }

  .tips-card {
    margin: var(--spacing-xl) var(--spacing-md);
    padding: var(--spacing-xl) var(--spacing-lg);
  }
}

/* 触摸优化 */
.picker-item, .reset-btn, .submit-btn {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}

.picker-item:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* 无障碍优化 */
.form-input:focus, .form-textarea:focus, .picker-item:focus {
  outline: none;
}

/* 性能优化 */
.form-section, .datetime-display {
  will-change: transform;
  transform: translateZ(0);
}
