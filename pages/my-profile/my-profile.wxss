/* pages/my-profile/my-profile.wxss */

/* ==========================================
   个人中心现代化样式
   ========================================== */
.user-card {
  margin-bottom: var(--spacing-md);
  background: var(--gradient-sunset);
  color: white;
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  background-size: 40rpx 40rpx;
  animation: float 15s linear infinite;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar-container {
  position: relative;
  margin-right: var(--spacing-lg);
  cursor: pointer;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-full);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: var(--shadow-lg);
  transition: all 0.3s ease;
}

.avatar-container:active .avatar {
  transform: scale(0.95);
}

/* 上传状态时的样式 */
.avatar-container.uploading .avatar {
  opacity: 0.6;
  filter: blur(1px);
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--radius-full);
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

/* 上传状态时显示overlay */
.avatar-container.uploading .avatar-overlay {
  opacity: 1;
  background: rgba(0, 0, 0, 0.7);
}

.avatar-edit-text {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}

/* 上传中的动画效果 */
.avatar-container.uploading .avatar-edit-text {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.role-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-xl);
  font-size: 26rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  box-shadow: var(--shadow-sm);
  backdrop-filter: blur(10px);
}

.role-badge.admin {
  background: rgba(255, 152, 0, 0.9);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.role-badge.member {
  background: rgba(76, 175, 80, 0.9);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.stats-card {
  margin-bottom: var(--spacing-md);
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border: 1rpx solid var(--gray-200);
  position: relative;
  overflow: hidden;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--gradient-secondary);
}

/* ==========================================
   卡片标题和统计样式
   ========================================== */
.card-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-lg);
  position: relative;
  padding-left: var(--spacing-md);
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--gradient-secondary);
  border-radius: var(--radius-sm);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  gap: var(--spacing-md);
}

.stat-item {
  text-align: center;
  flex: 1;
  padding: var(--spacing-md);
  background: linear-gradient(145deg, var(--gray-50) 0%, #ffffff 100%);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

.stat-number {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: var(--spacing-sm);
}

.stat-label {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  font-weight: 500;
}

.loading-state {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}

.registration-list {
  margin-top: 20rpx;
}

.registration-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.registration-item:last-child {
  border-bottom: none;
}

.registration-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.event-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.status-badge {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.status-badge.signed_up {
  background-color: #e3f2fd;
  color: #1976d2;
}

.status-badge.leave_requested {
  background-color: #fff3e0;
  color: #f57c00;
}

.status-badge.present {
  background-color: #e8f5e8;
  color: #1AAD19;
}

.status-badge.absent {
  background-color: #ffebee;
  color: #d32f2f;
}

.registration-info {
  margin-left: 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  width: 30rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.actions {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.prompt-content {
  text-align: center;
  padding: 40rpx;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.prompt-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

/* 开发工具卡片 */
.dev-tools-card {
  margin-top: 30rpx;
  border: 2rpx dashed #ff9800;
  background-color: #fff3e0;
}

.dev-tools-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.dev-badge {
  padding: 4rpx 12rpx;
  background-color: #ff9800;
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 8rpx;
}

.dev-tools-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.btn-dev-tools {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #ff9800;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  text-align: center;
}

.btn-dev-tools:active {
  background-color: #f57c00;
}
