/* pages/my-profile/my-profile.wxss */

/* ==========================================
   个人中心现代化样式
   ========================================== */
.user-card {
  margin-bottom: var(--spacing-md);
  background: var(--gradient-sunset);
  color: white;
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  background-size: 40rpx 40rpx;
  animation: float 15s linear infinite;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar-container {
  position: relative;
  margin-right: var(--spacing-lg);
  cursor: pointer;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-full);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: var(--shadow-lg);
  transition: all 0.3s ease;
}

.avatar-container:active .avatar {
  transform: scale(0.95);
}

/* 上传状态时的样式 */
.avatar-container.uploading .avatar {
  opacity: 0.6;
  filter: blur(1px);
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--radius-full);
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

/* 上传状态时显示overlay */
.avatar-container.uploading .avatar-overlay {
  opacity: 1;
  background: rgba(0, 0, 0, 0.7);
}

.avatar-edit-text {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}

/* 上传中的动画效果 */
.avatar-container.uploading .avatar-edit-text {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 功能菜单样式 */
.menu-card {
  padding: var(--spacing-md) var(--spacing-lg);
}

.menu-list {
  margin-top: var(--spacing-sm);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-sm) 0;
  cursor: pointer;
  transition: background-color 0.3s ease;
  border-radius: var(--radius-md);
}

.menu-item:active {
  background-color: var(--color-bg-secondary);
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-md);
}

.menu-title {
  font-size: 30rpx;
  color: var(--color-text-primary);
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: var(--color-text-tertiary);
}

/* 盘名修改弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 640rpx;
  max-width: 90vw;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.15), 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: scale(1);
  animation: modalShow 0.3s ease-out;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: white;
}

.modal-close {
  font-size: 44rpx;
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  line-height: 1;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.1);
  color: white;
}

.modal-body {
  padding: 32rpx;
}

.current-info {
  margin-bottom: 28rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
  border-radius: 16rpx;
  border: 1rpx solid #e8f0fe;
}

.current-name {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.remaining-count {
  display: block;
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.input-section {
  margin-bottom: 28rpx;
}

.input-label {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  padding: 32rpx 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: white;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 88rpx;
}

.modal-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

.input-tips {
  margin-top: 12rpx;
}

.tip {
  font-size: 24rpx;
  color: #8492a6;
}

.limit-notice {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 100%);
  border-radius: 16rpx;
  border: 1rpx solid #feb2b2;
}

.limit-text {
  font-size: 28rpx;
  color: #e53e3e;
  line-height: 1.6;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx 32rpx;
  background: #fafbfc;
}

.btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-cancel {
  background: #f7f8fa;
  color: #6c757d;
  border: 1rpx solid #e9ecef;
}

.btn-cancel:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.4);
}

.btn-confirm[disabled] {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.btn-confirm[disabled]:active {
  transform: none;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.role-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-xl);
  font-size: 26rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  box-shadow: var(--shadow-sm);
  backdrop-filter: blur(10px);
}

.role-badge.admin {
  background: rgba(255, 152, 0, 0.9);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.role-badge.member {
  background: rgba(76, 175, 80, 0.9);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.stats-card {
  margin-bottom: var(--spacing-md);
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border: 1rpx solid var(--gray-200);
  position: relative;
  overflow: hidden;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--gradient-secondary);
}

/* ==========================================
   卡片标题和统计样式
   ========================================== */
.card-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: var(--spacing-lg);
  position: relative;
  padding-left: var(--spacing-md);
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--gradient-secondary);
  border-radius: var(--radius-sm);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  gap: var(--spacing-md);
}

.stat-item {
  text-align: center;
  flex: 1;
  padding: var(--spacing-md);
  background: linear-gradient(145deg, var(--gray-50) 0%, #ffffff 100%);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--gray-200);
  transition: all 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

.stat-number {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: var(--spacing-sm);
}

.stat-label {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  font-weight: 500;
}

.loading-state {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-md);
  background: linear-gradient(145deg, var(--gray-50) 0%, #f8f9fa 100%);
  border-radius: var(--radius-lg);
  margin-top: var(--spacing-md);
}

.loading-text {
  font-size: 30rpx;
  color: var(--gray-600);
  font-weight: 500;
}

.empty-state {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-md);
  background: linear-gradient(145deg, var(--gray-50) 0%, #f8f9fa 100%);
  border-radius: var(--radius-lg);
  margin-top: var(--spacing-md);
  border: 2rpx dashed var(--gray-300);
  position: relative;
  overflow: hidden;
  animation: emptyStateFadeIn 0.6s ease-out;
}

.empty-state::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 1px, transparent 1px);
  background-size: 30rpx 30rpx;
  animation: float 20s linear infinite;
  opacity: 0.3;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.7;
  display: block;
  position: relative;
  z-index: 1;
  animation: emptyIconFloat 3s ease-in-out infinite;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: var(--gray-700);
  margin-bottom: var(--spacing-xs);
  position: relative;
  z-index: 1;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: var(--gray-500);
  line-height: 1.4;
  position: relative;
  z-index: 1;
  max-width: 350rpx;
  margin: 0 auto;
}

@keyframes emptyStateFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes emptyIconFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes float {
  0% {
    transform: translateX(0) translateY(0);
  }
  100% {
    transform: translateX(-30rpx) translateY(-30rpx);
  }
}

.registration-list {
  margin-top: var(--spacing-md);
}

.registration-item {
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--gray-200);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  cursor: pointer;
}

.registration-item:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.registration-item:last-child {
  margin-bottom: 0;
}

.registration-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.event-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--gray-800);
  flex: 1;
  margin-right: var(--spacing-md);
  line-height: 1.3;
}

.status-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-xl);
  font-size: 24rpx;
  font-weight: 600;
  white-space: nowrap;
}

.status-badge.signed_up {
  background-color: #e3f2fd;
  color: #1976d2;
}

.status-badge.leave_requested {
  background-color: #fff3e0;
  color: #f57c00;
}

.status-badge.present {
  background-color: #e8f5e8;
  color: #1AAD19;
}

.status-badge.absent {
  background-color: #ffebee;
  color: #d32f2f;
}

.registration-info {
  margin-left: 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  width: 30rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.actions {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.prompt-content {
  text-align: center;
  padding: 40rpx;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.prompt-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

/* 开发工具卡片 */
.dev-tools-card {
  margin-top: 30rpx;
  border: 2rpx dashed #ff9800;
  background-color: #fff3e0;
}

.dev-tools-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.dev-badge {
  padding: 4rpx 12rpx;
  background-color: #ff9800;
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 8rpx;
}

.dev-tools-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.btn-dev-tools {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #ff9800;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  text-align: center;
}

.btn-dev-tools:active {
  background-color: #f57c00;
}

/* ==========================================
   移动端响应式优化
   ========================================== */
@media (max-width: 750rpx) {
  .modal-content {
    width: 95vw;
    max-width: 95vw;
  }

  .modal-input {
    padding: 36rpx 24rpx;
    font-size: 30rpx;
    line-height: 1.6;
    min-height: 96rpx;
  }

  .input-label {
    font-size: 30rpx;
    margin-bottom: 16rpx;
  }

  .current-name, .remaining-count {
    font-size: 30rpx;
  }

  .btn {
    padding: 24rpx;
    font-size: 30rpx;
    min-height: 88rpx;
  }
}
